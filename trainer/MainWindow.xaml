        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ace of spades 0.35 trainer" Height="360" Width="350"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Icon="/trainer;component/Peggle.ico" ResizeMode="CanMinimize"
        xmlns:local="clr-namespace:trainer">
    <Window.Resources>
        <Storyboard x:Key="LogoZoom">
            <DoubleAnimation
                Storyboard.TargetName="Logo"
                Storyboard.TargetProperty="Width"
                From="235" To="150" Duration="0:0:0.5" 
                AutoReverse="True" 
                RepeatBehavior="Forever">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="LogoRotate">
            <DoubleAnimation
                Storyboard.TargetName="LogoRotation"
                Storyboard.TargetProperty="Angle"
                From="0" To="360" Duration="0:0:20" 
                AutoReverse="False" 
                RepeatBehavior="Forever"
                AccelerationRatio="0.7" DecelerationRatio="0.3">
                <DoubleAnimation.EasingFunction>
                    <BounceEase Bounces="2" EasingMode="EaseinOut" 
                                Bounciness="1.8" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="BackgroundRotate">
            <DoubleAnimation
                Storyboard.TargetName="BackgroundRotation"
                Storyboard.TargetProperty="Angle"
                From="0" To="-360" Duration="0:0:20" 
                AutoReverse="False" 
                RepeatBehavior="Forever">
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
